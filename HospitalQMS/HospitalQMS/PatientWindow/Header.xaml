<UserControl x:Class="HospitalQMS.PatientWindow.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HospitalQMS.PatientWindow">
    <Grid Name="header" HorizontalAlignment="Center" Height="40" Margin="0,0,0,0" VerticalAlignment="Top" Width="800">
            <!-- Column definitions -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
        <Image Grid.Column="0" Source="pack://application:,,,/HospitalQMS;component/Assets/hospital_logo.png" Width="Auto" Height="Auto" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>

            <!-- Name of the building -->
        <TextBlock Grid.Column="1" Text="Bệnh viện 4.0" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="14" FontWeight="Bold" Margin="10,0,0,0"/>
    </Grid>
</UserControl>
