<Window x:Class="WPFDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Background="LightBlue" Orientation ="Vertical">
            <Label Name="lblInstruction" FontSize="30" Content="Enter Student Information"/>
            <Label Name="lblStudentName" Content="Student Name"/>
            <TextBox Name="txtStudentName"  Height="25"/>
            <Label Name="lblDOB" Content="Date Of Birth"/>
            <TextBox Name="txtDOB"  Height="25"/>
            <Label Name="lblGender" Content="Gender"/>
            <RadioButton Name="rdoMale" Content="Male"></RadioButton>
            <RadioButton Name="rdoFemale" Content="Female"></RadioButton>
            <Label Name="lblPhoneNumber" Content="PhoneNumber"/>
            <TextBox Name="txtPhoneNumber" Height="25"/>
            <Label Name="lblMajor" Content="Major"/>
            <ComboBox Name="cbbMajor">
                
            </ComboBox>
            <Button Name="btnDisplay" Width="80" Margin="0,10,0,0" Content="Display"/>
        </StackPanel>
    </Grid>
</Window>
